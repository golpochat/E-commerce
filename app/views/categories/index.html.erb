<% provide(:title, "Categories") %>

<p id="notice"><%= notice %></p>
<div class="row">
  <div class="table-responsive">
    <h1 class="text-center">Categories</h1>
    <h5><%= link_to 'New Category', new_category_path,:class=> "btn btn-lg btn-primary" %></h5>
    <table class="table">
      <thead>
        <tr class="success">
          <th class="text-right">Title</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
    
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td class="text-right"><%= category.title %></td>
            <td class="text-center">
              <%= link_to 'Show', category,:class=> "btn btn-md btn-success" %>
              <%= link_to 'Edit', edit_category_path(category),:class=> "btn btn-md btn-warning" %>
              <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' },:class=> "btn btn-md btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


